.layout-image-display
  #image-display
    position fixed
    top 0
    left 0

    width 100%
    height 100%
    background rgba(0, 0, 0, .2)

    .layout-image-display-image
      display none
      max-width 100%
      max-height 100%

      // Not sure if I should use this, compatability may be an issue,
      // CSS3.
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

      &.current
        display initial

    &.hidden
      display none

  &-nojs-image
    width 100%

  &-gallery
    width 100%
    &-image
      width 25%
